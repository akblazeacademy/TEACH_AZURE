##############create user with full priviledges:
mysql -u root <<EOF
CREATE USER 'appuser'@'localhost' IDENTIFIED BY 'Initial@123';
GRANT ALL PRIVILEGES ON companydb.* TO 'appuser'@'localhost';
FLUSH PRIVILEGES;
EOF
#############rotate password:
mysql -u root <<EOF
ALTER USER 'appuser'@'localhost' IDENTIFIED BY 'Rotated@456';
FLUSH PRIVILEGES;
EOF
